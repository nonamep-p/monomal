{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "top",
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-icon-size": 48,
  "notification-body-image-height": 80,
  "notification-body-image-width": 160,
  "timeout": 5,
  "timeout-low": 2,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-width": 360,
  "control-center-height": 820,
  "notification-window-width": 360,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 250,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "notification-inline-replies": false,
  "notification-body-character-limit": 300,
  "widgets": [
    "custom-clock",
    "mpris",
    "volume",
    "backlight",
    "buttons-grid",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "custom-clock": {
      "exec": "date +'%I:%M %p'",
      "type": "script",
      "return-type": "plain",
      "interval": 30
    },
    "title": {
      "text": "Control Center",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰖩",
          "command": "~/.config/rofi/scripts/wifi.sh",
          "type": "toggle",
          "update-command": "nmcli radio wifi | grep -q enabled && echo true || echo false"
        },
        {
          "label": "󰂯",
          "command": "blueman-manager",
          "type": "toggle",
          "update-command": "bluetoothctl show | grep -q 'Powered: yes' && echo true || echo false"
        },
        {
          "label": "󰀝",
          "command": "rfkill toggle all",
          "type": "toggle",
          "update-command": "rfkill list | grep -q 'Soft blocked: yes' && echo true || echo false"
        },
        { "label": "󰍬", "command": "pavucontrol -t 4" },
        { "label": "󰖔", "command": "~/.config/rofi/applets/hyprshade.sh rofi" },
        { "label": "󰄄", "command": "~/.config/rofi/applets/screenshot.sh" },
        {
          "label": "󰕧",
          "command": "~/.config/hypr/scripts/screen_record.sh",
          "type": "toggle",
          "update-command": "[ -f /tmp/recording_status ] && echo true || echo false",
          "on-click-right": "~/.config/hypr/scripts/recorder_settings.sh"
        },
        { "label": "󰐥", "command": "wlogout" }
      ]
    },
    "mpris": {
      "image-size": 100,
      "image-radius": 0
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true
    },
    "backlight": {
      "label": "󰃠"
    }
  }
}